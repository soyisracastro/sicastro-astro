---
interface Props {
  class?: string;
  size?: 'sm' | 'md' | 'lg' | 'full';
}

const { class: className = '', size = 'lg' } = Astro.props;

const sizeClasses = {
  sm: 'max-w-3xl',
  md: 'max-w-5xl',
  lg: 'max-w-7xl',
  full: 'max-w-full',
};

const classes = `mx-auto px-4 sm:px-6 lg:px-8 ${sizeClasses[size]} ${className}`;
---

<div class={classes}>
  <slot />
</div>