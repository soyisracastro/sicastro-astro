---
interface Props {
  class?: string;
  variant?: 'default' | 'hover' | 'bordered';
  padding?: 'none' | 'sm' | 'md' | 'lg';
  href?: string;
}

const {
  class: className = '',
  variant = 'default',
  padding = 'md',
  href,
} = Astro.props;

const baseClasses = 'bg-white rounded-lg overflow-hidden';

const variantClasses = {
  default: 'border border-border',
  hover: 'border border-border hover:border-border-hover transition-colors duration-fast',
  bordered: 'border border-border hover:border-primary transition-colors duration-fast',
};

const paddingClasses = {
  none: '',
  sm: 'p-4',
  md: 'p-8',
  lg: 'p-10',
};

const classes = `${baseClasses} ${variantClasses[variant]} ${paddingClasses[padding]} ${className}`;
---

{href ? (
  <a href={href} class={`${classes} block group`}>
    <slot />
  </a>
) : (
  <div class={classes}>
    <slot />
  </div>
)}