---
interface Props {
  class?: string;
  padding?: 'none' | 'sm' | 'md' | 'lg';
  background?: 'white' | 'background' | 'subtle';
  id?: string;
}

const {
  class: className = '',
  padding = 'lg',
  background = 'white',
  id,
} = Astro.props;

const paddingClasses = {
  none: '',
  sm: 'py-12 md:py-16',
  md: 'py-16 md:py-20',
  lg: 'py-20 md:py-30',
};

const backgroundClasses = {
  white: 'bg-white',
  background: 'bg-background',
  subtle: 'bg-background',
};

const classes = `${paddingClasses[padding]} ${backgroundClasses[background]} ${className}`;
---

<section id={id} class={classes}>
  <slot />
</section>