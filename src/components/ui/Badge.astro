---
interface Props {
  variant?: 'default' | 'primary' | 'secondary' | 'info' | 'success';
  size?: 'sm' | 'md';
  class?: string;
}

const {
  variant = 'default',
  size = 'sm',
  class: className = '',
} = Astro.props;

const baseClasses = 'inline-flex items-center font-medium rounded-md';

// Variantes minimalistas - todas con fondos sutiles
const variantClasses = {
  default: 'bg-background text-text-primary border border-border',
  primary: 'bg-primary-light text-primary border border-primary/20',
  secondary: 'bg-background text-text-secondary border border-border',
  info: 'bg-primary-light text-primary border border-primary/20',
  success: 'bg-background text-text-primary border border-border',
};

const sizeClasses = {
  sm: 'px-2.5 py-1 text-xs',
  md: 'px-3 py-1.5 text-sm',
};

const classes = `${baseClasses} ${variantClasses[variant]} ${sizeClasses[size]} ${className}`;
---

<span class={classes}>
  <slot />
</span>