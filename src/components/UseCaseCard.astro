---
import Card from './ui/Card.astro';

interface Props {
  title: string;
  description: string;
  metric: string;
  metricValue: string;
}

const { title, description, metric, metricValue } = Astro.props;
---

<Card variant="default" padding="lg">
  <!-- Title -->
  <h3 class="text-xl font-bold text-text-primary mb-4">
    {title}
  </h3>

  <!-- Description -->
  <p class="text-base text-text-secondary leading-relaxed mb-6">
    {description}
  </p>

  <!-- Metrics -->
  <div class="pt-6 border-t border-border space-y-2">
    <div class="text-sm font-medium text-text-tertiary">
      {metric}
    </div>
    <div class="text-lg font-bold text-primary">
      {metricValue}
    </div>
  </div>
</Card>