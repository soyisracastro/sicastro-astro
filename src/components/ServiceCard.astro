---
import Card from './ui/Card.astro';
import type { Service } from '@/types';

interface Props {
  service: Service;
}

const { service } = Astro.props;
---

<Card variant="hover" href={`/servicio/${service.id}`}>
  <div class="flex flex-col h-full">
    <!-- Emoji/Icon - Sin fondo de color -->
    <div class="mb-6">
      <span class="text-4xl">{service.icon}</span>
    </div>

    <!-- Title -->
    <h3 class="text-2xl font-semibold text-text-primary mb-3 group-hover:text-text-primary transition-colors">
      {service.title}
    </h3>

    <!-- Description -->
    <p class="text-[15px] text-text-secondary mb-6 flex-grow leading-relaxed">
      {service.shortDescription}
    </p>

    <!-- Benefits - Lista simple con bullets -->
    <ul class="space-y-2.5 mb-6">
      {service.benefits.slice(0, 3).map(benefit => (
        <li class="flex items-start text-[15px] text-text-primary">
          <span class="mr-2 mt-1 text-text-tertiary">â€¢</span>
          <span class="leading-relaxed">{benefit}</span>
        </li>
      ))}
    </ul>

    <!-- Link sutil - sin flecha decorativa -->
    <div class="text-[15px] text-primary font-medium mt-auto group-hover:text-primary-dark transition-colors">
      Ver detalles
    </div>
  </div>
</Card>