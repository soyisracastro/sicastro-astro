---
import PageLayout from '@/layouts/PageLayout.astro';
import Section from '@/components/ui/Section.astro';
import Container from '@/components/ui/Container.astro';
import SectionTitle from '@/components/ui/SectionTitle.astro';
import Button from '@/components/ui/Button.astro';
import { contactInfo, companyInfo } from '@/lib/data';
import { services } from '@/lib/services';

const seo = {
  title: 'Contacto | S I Castro Consultores',
  description: 'Contáctanos para solicitar información sobre nuestros servicios. Llámanos, envíanos un email o visítanos en nuestra oficina.',
  url: 'https://sicastro.com/contacto',
};
---

<PageLayout seo={seo}>
  <!-- Hero Section -->
  <Section background="gradient" padding="md">
    <Container>
      <div class="max-w-4xl mx-auto text-center text-white">
        <h1 class="font-heading text-5xl md:text-6xl font-bold mb-6 animate-fade-in">
          Contáctanos
        </h1>
        <p class="text-xl md:text-2xl text-white/90 animate-slide-up">
          Estamos listos para ayudarte a alcanzar tus objetivos
        </p>
      </div>
    </Container>
  </Section>

  <!-- Contact Section -->
  <Section background="white">
    <Container>
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
        <!-- Contact Form -->
        <div class="lg:col-span-2">
          <div class="bg-background rounded-lg p-8 shadow-md">
            <h2 class="font-heading text-3xl font-bold text-dark mb-2">
              Envíanos un Mensaje
            </h2>
            <p class="text-dark-light mb-8">
              Completa el formulario y nos pondremos en contacto contigo en menos de 24 horas
            </p>

            <form class="space-y-6" method="POST" action="/api/contact">
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <!-- Name -->
                <div>
                  <label for="name" class="form-label">
                    Nombre Completo <span class="text-red-500">*</span>
                  </label>
                  <input
                    type="text"
                    id="name"
                    name="name"
                    required
                    class="form-input"
                    placeholder="Juan Pérez"
                  />
                </div>

                <!-- Email -->
                <div>
                  <label for="email" class="form-label">
                    Correo Electrónico <span class="text-red-500">*</span>
                  </label>
                  <input
                    type="email"
                    id="email"
                    name="email"
                    required
                    class="form-input"
                    placeholder="juan@empresa.com"
                  />
                </div>
              </div>

              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <!-- Phone -->
                <div>
                  <label for="phone" class="form-label">
                    Teléfono <span class="text-red-500">*</span>
                  </label>
                  <input
                    type="tel"
                    id="phone"
                    name="phone"
                    required
                    class="form-input"
                    placeholder="5551234567"
                    pattern="[0-9]{10}"
                  />
                </div>

                <!-- Service -->
                <div>
                  <label for="service" class="form-label">
                    Servicio de Interés <span class="text-red-500">*</span>
                  </label>
                  <select
                    id="service"
                    name="service"
                    required
                    class="form-input"
                  >
                    <option value="">Selecciona un servicio</option>
                    {services.map(service => (
                      <option value={service.id}>{service.title}</option>
                    ))}
                    <option value="otro">Otro</option>
                  </select>
                </div>
              </div>

              <!-- Message -->
              <div>
                <label for="message" class="form-label">
                  Mensaje <span class="text-red-500">*</span>
                </label>
                <textarea
                  id="message"
                  name="message"
                  required
                  rows="5"
                  class="form-textarea"
                  placeholder="Cuéntanos sobre tu proyecto o consulta..."
                ></textarea>
              </div>

              <!-- Privacy -->
              <div class="flex items-start">
                <input
                  type="checkbox"
                  id="privacy"
                  name="privacy"
                  required
                  class="mt-1 mr-3"
                />
                <label for="privacy" class="text-sm text-dark-light">
                  Acepto el <a href="/aviso-privacidad" class="text-primary hover:underline">Aviso de Privacidad</a> y autorizo el uso de mis datos personales
                </label>
              </div>

              <!-- Submit Button -->
              <Button type="submit" variant="primary" size="lg" class="w-full md:w-auto">
                Enviar Mensaje
              </Button>
            </form>
          </div>
        </div>

        <!-- Contact Info Sidebar -->
        <div class="lg:col-span-1 space-y-6">
          <!-- Quick Contact -->
          <div class="bg-primary text-white rounded-lg p-6 shadow-lg">
            <h3 class="font-heading text-2xl font-bold mb-6">
              Información de Contacto
            </h3>

            <div class="space-y-4">
              <!-- Phone -->
              <a href={`tel:${contactInfo.phone}`} class="flex items-start hover:text-primary-light transition-colors group">
                <svg class="w-6 h-6 mr-3 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                </svg>
                <div>
                  <p class="text-sm text-white/80 mb-1">Teléfono</p>
                  <p class="font-semibold">{contactInfo.phone}</p>
                </div>
              </a>

              <!-- Email -->
              <a href={`mailto:${contactInfo.email}`} class="flex items-start hover:text-primary-light transition-colors group">
                <svg class="w-6 h-6 mr-3 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
                <div>
                  <p class="text-sm text-white/80 mb-1">Email</p>
                  <p class="font-semibold break-all">{contactInfo.email}</p>
                </div>
              </a>

              <!-- WhatsApp -->
              <a 
                href={`https://wa.me/${contactInfo.whatsapp}`}
                target="_blank"
                rel="noopener noreferrer"
                class="flex items-start hover:text-primary-light transition-colors group"
              >
                <svg class="w-6 h-6 mr-3 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
                </svg>
                <div>
                  <p class="text-sm text-white/80 mb-1">WhatsApp</p>
                  <p class="font-semibold">{contactInfo.phone}</p>
                </div>
              </a>

              <!-- Address -->
              <div class="flex items-start">
                <svg class="w-6 h-6 mr-3 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                </svg>
                <div>
                  <p class="text-sm text-white/80 mb-1">Dirección</p>
                  <p class="font-semibold">
                    {contactInfo.address.street}<br/>
                    {contactInfo.address.colony}<br/>
                    {contactInfo.address.city}, {contactInfo.address.state}<br/>
                    C.P. {contactInfo.address.zipCode}
                  </p>
                </div>
              </div>
            </div>
          </div>

          <!-- Business Hours -->
          <div class="bg-background rounded-lg p-6 shadow-md">
            <h3 class="font-heading text-xl font-bold text-dark mb-4">
              Horario de Atención
            </h3>
            <div class="space-y-3 text-dark-light">
              <div class="flex items-start">
                <svg class="w-5 h-5 mr-2 flex-shrink-0 mt-0.5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                <div>
                  <p class="font-semibold text-dark">Lunes a Viernes</p>
                  <p class="text-sm">9:00 AM - 6:00 PM</p>
                </div>
              </div>
              <div class="flex items-start">
                <svg class="w-5 h-5 mr-2 flex-shrink-0 mt-0.5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                <div>
                  <p class="font-semibold text-dark">Sábado</p>
                  <p class="text-sm">9:00 AM - 2:00 PM</p>
                </div>
              </div>
              <div class="flex items-start">
                <svg class="w-5 h-5 mr-2 flex-shrink-0 mt-0.5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                </svg>
                <div>
                  <p class="font-semibold text-dark">Domingo</p>
                  <p class="text-sm">Cerrado</p>
                </div>
              </div>
            </div>
          </div>

          <!-- Social Media -->
          <div class="bg-white rounded-lg p-6 shadow-md border-2 border-gray-100">
            <h3 class="font-heading text-xl font-bold text-dark mb-4">
              Síguenos en Redes Sociales
            </h3>
            <div class="flex gap-4">
              <a
                href={contactInfo.social.facebook}
                target="_blank"
                rel="noopener noreferrer"
                class="flex items-center justify-center w-12 h-12 bg-[#1877f2] text-white rounded-lg hover:bg-[#0c63d4] transition-colors"
                aria-label="Facebook"
              >
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                </svg>
              </a>
              <a
                href={contactInfo.social.linkedin}
                target="_blank"
                rel="noopener noreferrer"
                class="flex items-center justify-center w-12 h-12 bg-[#0077b5] text-white rounded-lg hover:bg-[#005885] transition-colors"
                aria-label="LinkedIn"
              >
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                </svg>
              </a>
              <a
                href={contactInfo.social.twitter}
                target="_blank"
                rel="noopener noreferrer"
                class="flex items-center justify-center w-12 h-12 bg-[#1da1f2] text-white rounded-lg hover:bg-[#0c8bd9] transition-colors"
                aria-label="Twitter"
              >
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
                </svg>
              </a>
            </div>
          </div>

          <!-- Why Contact Us -->
          <div class="bg-accent/20 border-2 border-accent rounded-lg p-6">
            <h3 class="font-heading text-xl font-bold text-dark mb-4">
              ¿Por Qué Contactarnos?
            </h3>
            <ul class="space-y-3 text-sm">
              <li class="flex items-start">
                <svg class="w-5 h-5 text-accent mr-2 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <span class="text-dark">Consulta inicial gratuita</span>
              </li>
              <li class="flex items-start">
                <svg class="w-5 h-5 text-accent mr-2 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <span class="text-dark">Respuesta en menos de 24 horas</span>
              </li>
              <li class="flex items-start">
                <svg class="w-5 h-5 text-accent mr-2 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <span class="text-dark">Sin compromiso</span>
              </li>
              <li class="flex items-start">
                <svg class="w-5 h-5 text-accent mr-2 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <span class="text-dark">Asesoría personalizada</span>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </Container>
  </Section>

  <!-- Map Section -->
  <Section background="background" padding="none">
    <div class="w-full h-[400px] bg-gray-300">
      <!-- Google Maps Embed (Replace with actual embed code) -->
      <div class="w-full h-full flex items-center justify-center text-gray-600">
        <div class="text-center">
          <svg class="w-16 h-16 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
          </svg>
          <p class="text-lg font-semibold">
            Mapa de ubicación
          </p>
          <p class="text-sm mt-2">
            {contactInfo.address.street}, {contactInfo.address.city}
          </p>
        </div>
      </div>
    </div>
  </Section>
</PageLayout>