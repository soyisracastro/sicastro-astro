---
import PageLayout from '@/layouts/PageLayout.astro';
import Section from '@/components/ui/Section.astro';
import Container from '@/components/ui/Container.astro';
import Button from '@/components/ui/Button.astro';
import { contactInfo, companyInfo } from '@/lib/data';
import { services } from '@/lib/services';

const seo = {
  title: 'Contacto | S I Castro Consultores',
  description: 'Contáctanos para solicitar información sobre nuestros servicios. Llámanos, envíanos un email o visítanos en nuestra oficina.',
  url: 'https://sicastro.com/contacto',
};
---

<PageLayout seo={seo}>
  <!-- Hero Section - Minimalista -->
  <Section background="white" padding="md">
    <Container>
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-5xl md:text-6xl font-bold mb-6 text-text-primary">
          Contáctanos
        </h1>
        <p class="text-xl md:text-2xl text-text-secondary">
          Estamos listos para ayudarte a alcanzar tus objetivos
        </p>
      </div>
    </Container>
  </Section>

  <!-- Contact Section -->
  <Section background="background">
    <Container>
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
        <!-- Contact Form -->
        <div class="lg:col-span-2">
          <div class="bg-white rounded-lg p-8 md:p-10 border border-border">
            <h2 class="text-3xl font-bold text-text-primary mb-2">
              Envíanos un Mensaje
            </h2>
            <p class="text-text-secondary mb-8">
              Completa el formulario y nos pondremos en contacto contigo en menos de 24 horas
            </p>

            <form class="space-y-6" method="POST" action="/api/contact">
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <!-- Name -->
                <div>
                  <label for="name" class="form-label">
                    Nombre Completo <span class="text-red-500">*</span>
                  </label>
                  <input
                    type="text"
                    id="name"
                    name="name"
                    required
                    class="form-input"
                    placeholder="Juan Pérez"
                  />
                </div>

                <!-- Email -->
                <div>
                  <label for="email" class="form-label">
                    Correo Electrónico <span class="text-red-500">*</span>
                  </label>
                  <input
                    type="email"
                    id="email"
                    name="email"
                    required
                    class="form-input"
                    placeholder="juan@empresa.com"
                  />
                </div>
              </div>

              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <!-- Phone -->
                <div>
                  <label for="phone" class="form-label">
                    Teléfono <span class="text-red-500">*</span>
                  </label>
                  <input
                    type="tel"
                    id="phone"
                    name="phone"
                    required
                    class="form-input"
                    placeholder="5551234567"
                    pattern="[0-9]{10}"
                  />
                </div>

                <!-- Service -->
                <div>
                  <label for="service" class="form-label">
                    Servicio de Interés <span class="text-red-500">*</span>
                  </label>
                  <select
                    id="service"
                    name="service"
                    required
                    class="form-input"
                  >
                    <option value="">Selecciona un servicio</option>
                    {services.map(service => (
                      <option value={service.id}>{service.title}</option>
                    ))}
                    <option value="otro">Otro</option>
                  </select>
                </div>
              </div>

              <!-- Message -->
              <div>
                <label for="message" class="form-label">
                  Mensaje <span class="text-red-500">*</span>
                </label>
                <textarea
                  id="message"
                  name="message"
                  required
                  rows="5"
                  class="form-textarea"
                  placeholder="Cuéntanos sobre tu proyecto o consulta..."
                ></textarea>
              </div>

              <!-- Privacy -->
              <div class="flex items-start">
                <input
                  type="checkbox"
                  id="privacy"
                  name="privacy"
                  required
                  class="mt-1 mr-3 rounded border-border text-primary focus:ring-primary"
                />
                <label for="privacy" class="text-sm text-text-secondary">
                  Acepto el <a href="/aviso-privacidad" class="text-primary hover:text-primary-dark underline transition-colors">Aviso de Privacidad</a> y autorizo el uso de mis datos personales
                </label>
              </div>

              <!-- Submit Button -->
              <Button type="submit" variant="primary" size="lg" class="w-full md:w-auto">
                Enviar Mensaje
              </Button>
            </form>
          </div>
        </div>

        <!-- Contact Info Sidebar -->
        <div class="lg:col-span-1 space-y-6">
          <!-- Quick Contact -->
          <div class="bg-white border border-border rounded-lg p-6">
            <h3 class="text-2xl font-bold mb-6 text-text-primary">
              Información de Contacto
            </h3>

            <div class="space-y-5">
              <!-- Phone -->
              <a href={`tel:${contactInfo.phone}`} class="flex items-start hover:text-primary transition-colors group">
                <svg class="w-6 h-6 mr-3 flex-shrink-0 mt-0.5 text-text-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                </svg>
                <div>
                  <p class="text-sm text-text-tertiary mb-1">Teléfono</p>
                  <p class="font-semibold text-text-primary">{contactInfo.phone}</p>
                </div>
              </a>

              <!-- Email -->
              <a href={`mailto:${contactInfo.email}`} class="flex items-start hover:text-primary transition-colors group">
                <svg class="w-6 h-6 mr-3 flex-shrink-0 mt-0.5 text-text-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
                <div>
                  <p class="text-sm text-text-tertiary mb-1">Email</p>
                  <p class="font-semibold text-text-primary break-all">{contactInfo.email}</p>
                </div>
              </a>

              <!-- WhatsApp -->
              <a 
                href={`https://wa.me/${contactInfo.whatsapp}`}
                target="_blank"
                rel="noopener noreferrer"
                class="flex items-start hover:text-primary transition-colors group"
              >
                <svg class="w-6 h-6 mr-3 flex-shrink-0 mt-0.5 text-text-secondary" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
                </svg>
                <div>
                  <p class="text-sm text-text-tertiary mb-1">WhatsApp</p>
                  <p class="font-semibold text-text-primary">{contactInfo.whatsapp}</p>
                </div>
              </a>

              <!-- Address -->
              <div class="flex items-start">
                <svg class="w-6 h-6 mr-3 flex-shrink-0 mt-0.5 text-text-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                </svg>
                <div>
                  <p class="text-sm text-text-tertiary mb-1">Dirección</p>
                  <p class="font-semibold text-text-primary leading-relaxed">
                    {contactInfo.address.street}<br/>
                    {contactInfo.address.city}, {contactInfo.address.state}<br/>
                    C.P. {contactInfo.address.zipCode}
                  </p>
                </div>
              </div>
            </div>
          </div>

          <!-- Business Hours -->
          <div class="bg-white border border-border rounded-lg p-6">
            <h3 class="text-xl font-bold text-text-primary mb-4">
              Horario de Atención
            </h3>
            <div class="space-y-3 text-text-secondary">
              <div class="flex items-start">
                <svg class="w-5 h-5 mr-2 flex-shrink-0 mt-0.5 text-text-tertiary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                <div>
                  <p class="font-semibold text-text-primary">Lunes a Viernes</p>
                  <p class="text-sm">9:00 AM - 6:00 PM</p>
                </div>
              </div>
              <div class="flex items-start">
                <svg class="w-5 h-5 mr-2 flex-shrink-0 mt-0.5 text-text-tertiary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                </svg>
                <div>
                  <p class="font-semibold text-text-primary">Fin de semana</p>
                  <p class="text-sm">Cerrado</p>
                </div>
              </div>
            </div>
          </div>

          <!-- Why Contact Us -->
          <div class="bg-white border border-border rounded-lg p-6">
            <h3 class="text-xl font-bold text-text-primary mb-4">
              ¿Por Qué Contactarnos?
            </h3>
            <ul class="space-y-3 text-sm">
              <li class="flex items-start">
                <span class="mr-2 mt-1 text-text-tertiary">•</span>
                <span class="text-text-primary">Consulta inicial gratuita</span>
              </li>
              <li class="flex items-start">
                <span class="mr-2 mt-1 text-text-tertiary">•</span>
                <span class="text-text-primary">Respuesta en menos de 24 horas</span>
              </li>
              <li class="flex items-start">
                <span class="mr-2 mt-1 text-text-tertiary">•</span>
                <span class="text-text-primary">Sin compromiso</span>
              </li>
              <li class="flex items-start">
                <span class="mr-2 mt-1 text-text-tertiary">•</span>
                <span class="text-text-primary">Asesoría personalizada</span>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </Container>
  </Section>

  <!-- Map Section -->
  <Section background="white" padding="none">
    <div class="w-full h-[450px] md:h-[500px] border-y border-border">
      <iframe 
        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d1893.129609057215!2d-100.67147210023774!3d18.38104989879496!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x84332dd820f224a1%3A0xa2a70bf077f1731a!2sS%20I%20Castro%20Consultores%20-%20Contador%20P%C3%BAblico!5e0!3m2!1ses-419!2smx!4v1759858597639!5m2!1ses-419!2smx" 
        width="100%" 
        height="100%" 
        style="border:0;" 
        allowfullscreen="" 
        loading="lazy" 
        referrerpolicy="no-referrer-when-downgrade"
        title="Ubicación de S I Castro Consultores"
      ></iframe>
    </div>
  </Section>
</PageLayout>