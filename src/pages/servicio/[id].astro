---
import PageLayout from '@/layouts/PageLayout.astro';
import Section from '@/components/ui/Section.astro';
import Container from '@/components/ui/Container.astro';
import Button from '@/components/ui/Button.astro';
import Badge from '@/components/ui/Badge.astro';
import ServiceCard from '@/components/ServiceCard.astro';
import { services, getServiceById, getRelatedServices } from '@/lib/services';
import { formatCurrency } from '@/lib/utils';

export function getStaticPaths() {
  return services.map(service => ({
    params: { id: service.id },
  }));
}

const { id } = Astro.params;
const service = getServiceById(id as string);

if (!service) {
  return Astro.redirect('/servicios');
}

const relatedServices = getRelatedServices(service.id);

const categoryColors = {
  fiscal: 'primary',
  contable: 'secondary',
  consultoria: 'info',
  nomina: 'success',
} as const;

const seo = {
  title: `${service.title} | S I Castro Consultores`,
  description: service.fullDescription,
  url: `https://sicastro.com/servicio/${service.id}`,
};
---

<PageLayout seo={seo}>
  <!-- Hero Section -->
  <Section background="gradient" padding="lg">
    <Container>
      <div class="max-w-4xl mx-auto">
        <!-- Breadcrumb -->
        <nav class="flex items-center space-x-2 text-sm text-white/80 mb-6">
          <a href="/" class="hover:text-white transition-colors">Inicio</a>
          <span>/</span>
          <a href="/servicios" class="hover:text-white transition-colors">Servicios</a>
          <span>/</span>
          <span class="text-white font-medium">{service.title}</span>
        </nav>

        <!-- Service Icon and Category -->
        <div class="flex items-center gap-4 mb-6">
          <div class="flex items-center justify-center w-20 h-20 bg-white/10 backdrop-blur-sm rounded-lg">
            <span class="text-4xl">{service.icon}</span>
          </div>
          <Badge variant={categoryColors[service.category]} size="lg">
            {service.category.charAt(0).toUpperCase() + service.category.slice(1)}
          </Badge>
        </div>

        <!-- Title -->
        <h1 class="font-heading text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-6 animate-fade-in">
          {service.title}
        </h1>

        <!-- Description -->
        <p class="text-xl md:text-2xl text-white/90 mb-8 animate-slide-up">
          {service.shortDescription}
        </p>

        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row gap-4">
          <Button href="/contacto" variant="secondary" size="lg">
            Solicitar Este Servicio
          </Button>
          <Button href="tel:555-123-4567" variant="outline" size="lg" class="bg-white/10 hover:bg-white hover:text-primary border-white">
            Llamar Ahora
          </Button>
        </div>
      </div>
    </Container>
  </Section>

  <!-- Service Details -->
  <Section background="white">
    <Container>
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
        <!-- Main Content -->
        <div class="lg:col-span-2">
          <!-- Full Description -->
          <div class="mb-12">
            <h2 class="font-heading text-3xl font-bold text-dark mb-4">
              Descripción del Servicio
            </h2>
            <p class="text-lg text-dark-light leading-relaxed">
              {service.fullDescription}
            </p>
          </div>

          <!-- Benefits -->
          <div class="mb-12">
            <h2 class="font-heading text-3xl font-bold text-dark mb-6">
              Beneficios
            </h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              {service.benefits.map(benefit => (
                <div class="flex items-start bg-background p-4 rounded-lg">
                  <svg class="w-6 h-6 text-accent mr-3 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                  </svg>
                  <span class="text-dark">{benefit}</span>
                </div>
              ))}
            </div>
          </div>

          <!-- Process -->
          <div class="mb-12">
            <h2 class="font-heading text-3xl font-bold text-dark mb-6">
              Nuestro Proceso de Trabajo
            </h2>
            <div class="space-y-6">
              {service.process.map((step, index) => (
                <div class="flex items-start">
                  <div class="flex-shrink-0 w-12 h-12 bg-primary text-white rounded-full flex items-center justify-center font-bold text-xl mr-4">
                    {step.step}
                  </div>
                  <div class="flex-1">
                    <h3 class="font-semibold text-xl text-dark mb-2">
                      {step.title}
                    </h3>
                    <p class="text-dark-light">
                      {step.description}
                    </p>
                  </div>
                </div>
              ))}
            </div>
          </div>
        </div>

        <!-- Sidebar -->
        <div class="lg:col-span-1">
          <div class="sticky top-24 space-y-6">
            <!-- Pricing Card -->
            <div class="bg-background rounded-lg p-6 shadow-md">
              <h3 class="font-heading text-2xl font-bold text-dark mb-4">
                Información de Precio
              </h3>
              
              {service.pricing.from && (
                <div class="mb-4">
                  <p class="text-sm text-dark-light mb-1">Desde</p>
                  <p class="font-heading text-4xl font-bold text-primary">
                    {formatCurrency(service.pricing.from)}
                    {service.pricing.type === 'monthly' && <span class="text-lg font-normal text-dark-light">/mes</span>}
                  </p>
                </div>
              )}
              
              <p class="text-dark-light mb-6">
                {service.pricing.description}
              </p>

              <Button href="/contacto" variant="primary" class="w-full mb-3">
                Solicitar Cotización
              </Button>
              
              <a href="tel:555-123-4567" class="block text-center text-primary hover:text-primary-dark transition-colors">
                o llama al 555-123-4567
              </a>
            </div>

            <!-- Features List -->
            <div class="bg-white rounded-lg p-6 shadow-md border-2 border-gray-100">
              <h3 class="font-heading text-xl font-bold text-dark mb-4">
                ¿Qué Incluye?
              </h3>
              <ul class="space-y-3">
                <li class="flex items-start text-sm">
                  <svg class="w-5 h-5 text-accent mr-2 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                  </svg>
                  <span class="text-dark">Consulta inicial gratuita</span>
                </li>
                <li class="flex items-start text-sm">
                  <svg class="w-5 h-5 text-accent mr-2 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                  </svg>
                  <span class="text-dark">Atención personalizada</span>
                </li>
                <li class="flex items-start text-sm">
                  <svg class="w-5 h-5 text-accent mr-2 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                  </svg>
                  <span class="text-dark">Reportes mensuales</span>
                </li>
                <li class="flex items-start text-sm">
                  <svg class="w-5 h-5 text-accent mr-2 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                  </svg>
                  <span class="text-dark">Soporte continuo</span>
                </li>
                <li class="flex items-start text-sm">
                  <svg class="w-5 h-5 text-accent mr-2 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                  </svg>
                  <span class="text-dark">Acceso a portal en línea</span>
                </li>
              </ul>
            </div>

            <!-- Contact Card -->
            <div class="bg-primary text-white rounded-lg p-6 shadow-lg">
              <h3 class="font-heading text-xl font-bold mb-3">
                ¿Tienes Dudas?
              </h3>
              <p class="mb-4 text-white/90">
                Nuestros expertos están listos para ayudarte
              </p>
              <Button href="/contacto" variant="secondary" class="w-full">
                Contactar Ahora
              </Button>
            </div>
          </div>
        </div>
      </div>
    </Container>
  </Section>

  <!-- Related Services -->
  {relatedServices.length > 0 && (
    <Section background="background">
      <Container>
        <h2 class="font-heading text-3xl md:text-4xl font-bold text-dark text-center mb-12">
          Servicios Relacionados
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {relatedServices.map(relatedService => (
            <ServiceCard service={relatedService} />
          ))}
        </div>
      </Container>
    </Section>
  )}

  <!-- CTA Section -->
  <Section background="gradient">
    <Container>
      <div class="max-w-3xl mx-auto text-center text-white">
        <h2 class="font-heading text-4xl md:text-5xl font-bold mb-6">
          ¿Listo para Empezar?
        </h2>
        <p class="text-xl mb-8 text-white/90">
          Contáctanos hoy y descubre cómo podemos ayudarte con {service.title.toLowerCase()}
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <Button href="/contacto" variant="secondary" size="lg">
            Solicitar Servicio
          </Button>
          <Button href="/servicios" variant="outline" size="lg" class="bg-white/10 hover:bg-white hover:text-primary border-white">
            Ver Todos los Servicios
          </Button>
        </div>
      </div>
    </Container>
  </Section>
</PageLayout>